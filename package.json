    "http-errors": "~1.7.3",
    "markdown-it": "^10.0.0",
    "moment": "^2.24.0",
    "morgan": "~1.10.0",
    "node-html-parser": "^1.2.20",
    "pug": "2.0.4",
    "sass-middleware": "^0.0.3",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^26.0.1",
    "nodemon": "^2.0.2",
    "sass": "^1.77.8",
    "supertest": "^4.0.2"
