{
    "name": "techlife-tapirio",
    "version": "0.2.0",
    "private": true,
    "scripts": {
        "start": "node ./bin/www-techlife",
        "admin": "node ./admin/bin/www-techlife",
        "test": "jest",
        "sass": "concurrently \"vite build --watch\" \"node scripts/vite-watch-helper.js\"",
        "sass-build": "vite build && node scripts/vite-postbuild.js",
        "build-prod": "NODE_ENV=production vite build && node scripts/vite-postbuild.js",
        "devstart": "nodemon ./bin/www-techlife",
        "serverstart": "DEBUG=tapirio:* npm run devstart",
        "dev": "concurrently \"npm run devstart\" \"npm run sass\"",
        "build": "npm run sass-build && node scripts/build-assets.js",
        "cache-bust": "node scripts/build-assets.js",
        "analyze-podcast": "npx ts-node scripts/utils/podcast-analyzer/podcast-analyzer.ts",
        "test-feed": "node scripts/utils/podcast-analyzer/test-analyzer.js",
        "tsc": "tsc --noEmit"
    },
    "jest": {
        "testEnvironment": "node",
        "coveragePathIgnorePatterns": [
            "/node_modules/"
        ]
    },
    "dependencies": {
        "bootstrap": "^4.4.1",
        "cookie-parser": "~1.4.5",
        "cors": "^2.8.5",
        "dayjs": "^1.11.13",
        "debug": "~4.1.1",
        "dotenv": "^16.6.1",
        "express": "^4.21.2",
        "fs-extra": "^11.3.1",
        "helmet": "^8.1.0",
        "http-errors": "^2.0.0",
        "markdown-it": "^14.1.0",
        "morgan": "~1.10.0",
        "node-html-parser": "^6.1.13",
        "openai": "^4.67.3",
        "pug": "^3.0.3",
        "xml2js": "^0.6.2"
    },
    "devDependencies": {
        "@types/node": "^22.17.2",
        "@types/xml2js": "^0.4.14",
        "@vitejs/plugin-legacy": "^7.2.1",
        "autoprefixer": "^10.4.21",
        "braces": "^3.0.3",
        "chokidar": "^4.0.3",
        "concurrently": "^8.2.2",
        "jest": "^29.7.0",
        "nodemon": "^3.1.10",
        "postcss": "^8.5.6",
        "postcss-custom-properties": "^14.0.6",
        "postcss-import": "^16.1.1",
        "postcss-nesting": "^13.0.2",
        "postcss-preset-env": "^10.3.0",
        "supertest": "^7.1.4",
        "terser": "^5.43.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2",
        "vite": "^7.1.3"
    }
}
