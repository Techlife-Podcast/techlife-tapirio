  script.
    document.getElementById('question-form').addEventListener('submit', async function(e) {
      // Check form validity first (let browser validation run)
      if (!this.checkValidity()) {
        // Browser will show validation messages, don't prevent default
        return;
      }
      
      // Only prevent default if form is valid
      e.preventDefault();
      
      const formData = new FormData(this);
      const submitBtn = this.querySelector('button[type="submit"]');
      const resultDiv = document.getElementById('submission-result');
      
      // Convert FormData to URLSearchParams for application/x-www-form-urlencoded
      const urlEncodedData = new URLSearchParams();
      for (const [key, value] of formData) {
        urlEncodedData.append(key, value);
      }
      
      // Disable submit button
      submitBtn.disabled = true;
      submitBtn.textContent = '–û—Ç–ø—Ä–∞–≤–ª—è–µ–º...';
      
      try {
        const response = await fetch('/voprosy', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
          },
          body: urlEncodedData
        });
        
        const result = await response.json();
        
        if (response.ok) {
          resultDiv.innerHTML = '<div class="alert alert-success">‚úÖ –°–ø–∞—Å–∏–±–æ! –í–∞—à –≤–æ–ø—Ä–æ—Å –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω. –ú—ã —Ä–∞—Å—Å–º–æ—Ç—Ä–∏–º –µ–≥–æ –¥–ª—è –±—É–¥—É—â–∏—Ö –≤—ã–ø—É—Å–∫–æ–≤.</div>';
          this.reset();
        } else {
          resultDiv.innerHTML = '<div class="alert alert-danger">‚ùå ' + (result.error || '–ü—Ä–æ–∏–∑–æ—à–ª–∞ –æ—à–∏–±–∫–∞ –ø—Ä–∏ –æ—Ç–ø—Ä–∞–≤–∫–µ') + '</div>';
        }
      } catch (error) {
        resultDiv.innerHTML = '<div class="alert alert-danger">‚ùå –û—à–∏–±–∫–∞ —Å–µ—Ç–∏. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –µ—â–µ —Ä–∞–∑.</div>';
      }
      
      // Re-enable submit button
      submitBtn.disabled = false;
      submitBtn.textContent = '–û—Ç–ø—Ä–∞–≤–∏—Ç—å –≤–æ–ø—Ä–æ—Å';
      
      // Scroll to result
      resultDiv.scrollIntoView({ behavior: 'smooth' });
    });