if path
  .d-flex.justify-content-end.top-nav.align-items-center
    if process.env.VERCEL_ENV === 'preview' || process.env.NODE_ENV === 'development' || process.env.VERCEL_GIT_COMMIT_REF === 'dev'
      .dev-indicator-wrapper
        .dev-indicator#devIndicator(title="Click for deployment info")
        .dev-popover#devPopover
          .dev-popover-header Development Environment
          .dev-popover-content
            table.dev-info-table
              tbody
                tr
                  td.dev-label Branch
                  td.dev-value= process.env.VERCEL_GIT_COMMIT_REF || 'local'
                tr
                  td.dev-label Commit
                  td.dev-value= process.env.VERCEL_GIT_COMMIT_SHA ? process.env.VERCEL_GIT_COMMIT_SHA.substring(0, 7) : 'N/A'
                tr
                  td.dev-label Environment
                  td.dev-value= process.env.DEV_ENV || process.env.VERCEL_ENV || 'local'
                tr
                  td.dev-label Region
                  td.dev-value= process.env.VERCEL_REGION || 'local'
                if process.env.VERCEL_URL
                  tr
                    td.dev-label Deploy URL
                    td.dev-value
                      a.dev-link(href=`https://${process.env.VERCEL_URL}` target="_blank" rel="noopener")= process.env.VERCEL_URL
    //- a.stats-dot.me-3(href="/stats" title="Statistics")
    nav.mt-3
      ul.list-inline.mb-3
        li.list-inline-item
          a.nav-pill(href="/" class=(path.includes('home') ? 'active' : ''))
            include ../../public/images/icon-home.svg
        li.list-inline-item
          a.nav-pill(href="/about" class=(path.includes('about') ? 'active' : '')) О нас
        li.list-inline-item
          a.nav-pill(href="/resources" class=(path.includes('resources') ? 'active' : '')) Pecypcы